	author = {Ibánez, J.D.J.L.G. and Wang, A.I.},
	year = {2015},
	pages = {25--44},
}

@article{lindgren_enhancing_2016,
	title = {Enhancing learning and engagement through embodied interaction within a mixed reality simulation},
	volume = {95},
	issn = {03601315 (ISSN)},
	url = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-84957031701&doi=10.1016%2fj.compedu.2016.01.001&partnerID=40&md5=94810ae87c6b36100628ae49e6c3e275},
	doi = {10.1016/j.compedu.2016.01.001},
	abstract = {Computer simulations have been shown to be effective instruments for teaching students about difficult concepts, particularly in the STEM disciplines. Emerging interface technologies are expanding the modalities with which learners can interact with these simulations, but the effects of these new interactions on conceptual understanding and student engagement have not been examined in great depth. We present here a study where middle school students learned about gravity and planetary motion in an immersive, whole-body interactive simulation, and we compared their learning and attitudes about science with students who used a desktop version of the same simulation. Results of the study indicate that enacting concepts and experiencing critical ideas in physics through whole-body activity leads to significant learning gains, higher levels of engagement, and more positive attitudes towards science. © 2016 Elsevier Ltd. All rights reserved.},
