}

@article{steier_metaimagining_2019,
	title = {Metaimagining and {Embodied} {Conceptions} of {Spacetime}},
	volume = {37},
	issn = {07370008 (ISSN)},
	url = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-85063956167&doi=10.1080%2f07370008.2019.1580711&partnerID=40&md5=5a236c5d7ab8d1568d4f69ce3b5cdf28},
	doi = {10.1080/07370008.2019.1580711},
	abstract = {Though we live in a 4-dimensional universe, our minds and bodies are not particularly good at perceiving and depicting 4 dimensions. This study contributes to our understanding of collaboration with abstract concepts by examining particular activities where bodily and experiential understandings may conflict with the conceptual domain. Specifically, upper secondary physics classrooms studying Einstein’s general theory of relativity are taken as a setting to identify the representational practices and conceptual challenges that arise when learners attempt to make meaning with, and express conflicting notions of, space and time. To unpack these challenges, we draw on the concept of imagination and on theoretical perspectives that treat imagining as a social activity. We also present the concept of metaimagining to characterize layered processes in which learners attend to and manage shifts between their own imaginative activities. This concept is illustrated through a detailed analysis of an extended conversation between 2 upper secondary physics students working with general relativity and spacetime. The students perform a diverse set of imaginative activities that are strongly tied to communicative, cognitive, and bodily action. We also show how the unique domain of general relativity presents particular challenges to student meaning making of abstract concepts which in turn prompt metaimagining. Based on our analysis, we offer recommendations to improve instructional practices in general relativity and argue for the consideration of imagining as a transdisciplinary competency in math and science education. © 2019, © 2019 Taylor \& Francis Group, LLC.},
	language = {English},
	number = {2},
	journal = {Cognition and Instruction},
	author = {Steier, R. and Kersting, M.},
	year = {2019},
	pages = {145--168},
}

