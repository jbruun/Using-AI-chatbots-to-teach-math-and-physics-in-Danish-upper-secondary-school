@article{jagodzinski_examination_2014,
	title = {{THE} {EXAMINATION} {OF} {THE} {IMPACT} {ON} {STUDENTS}' {USE} {OF} {GESTURES} {WHILE} {WORKING} {IN} {A} {VIRTUAL} {CHEMICAL} {LABORATORY} {FOR} {THEIR} {COGNITIVE} {ABILITIES}},
