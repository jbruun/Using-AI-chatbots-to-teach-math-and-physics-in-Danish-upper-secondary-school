}

@article{ahn_unplugged_2022,
	title = {Unplugged {Debugging} {Activities} for {Developing} {Young} {Learners}’ {Debugging} {Skills}},
	volume = {36},
	issn = {02568543 (ISSN)},
	url = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-85116501468&doi=10.1080%2f02568543.2021.1981503&partnerID=40&md5=5ae9d63ad987ee65a6c1d0042b664b11},
