	number = {3},
	journal = {International Journal of Computer-Supported Collaborative Learning},
	author = {Jiang, S. and Kahn, J.},
	year = {2020},
	pages = {257--281},
}

@article{bryant_children_2020,
	title = {Children as community planners: embodied activities, visual-spatial thinking, and a re-imagined community},
