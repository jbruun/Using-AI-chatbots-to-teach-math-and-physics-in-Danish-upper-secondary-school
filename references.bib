	issn = {15710068 (ISSN)},
	url = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-84903883998&doi=10.1007%2fs10763-013-9438-4&partnerID=40&md5=4c48e8b718b5de2282eea8e6af78e949},
