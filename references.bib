@article{turkka_science_2022,
	title = {Science learning with emotions: {Preservice} science teachers as drama facilitators},
	volume = {10},
	issn = {23237112 (ISSN)},
	url = {https://www.scopus.com/inward/record.uri?eid=2-s2.0-85148423257&doi=10.31129%2fLUMAT.10.1.1745&partnerID=40&md5=f1a1293e757ba2e26ac7baad7d5e8621},
